<view class="container">  
  <view class="login-icon">  
    <image class="login-img" src="../images/loginLog2.jpg"></image>  
  </view>  
  <view class="login-from">  
  
    <!--账号-->  
    <view class="inputView">  
      <image class="nameImage" src="../images/name.png"></image>  
      <label class="loginLab">账号</label>  
       <input class="inputText" placeholder="请输入账号" bindinput="inputPhoneNum" maxlength="11" size="20" />   
    </view>  
    <view class="line"></view>  
  
    <!--密码-->  
    <view class="inputView">  
      <image class="keyImage" src="../images/key.png"></image>  
      <label class="loginLab">密码</label>  
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" maxlength="20" size="20" />   
    </view>  
  
    <!--按钮-->  
     <view>
    <!-- <button class="changeBtn" type="primary" size="mini" loading="{{loading}}" plain="false" disabled="{{disabled}}" bindtap="change">手机登录</button>  -->
    </view> 
    <view class="BtnView">  
    <button class="loginBtn" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
      <button class="registerBtn" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="register">注册</button>  
      
    </view>  
  </view>  
</view>  