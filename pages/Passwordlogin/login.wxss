page{  
  height: 100%; 
  font-family: Helvetica; 
}  
  
.container {  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
  background-color: #f2f2f2  
}   
  
/*登录图片*/  
.login-icon{  
  flex: none;  
}  
.login-img{  
  width: 750rpx;  
}  
  
/*表单内容*/  
.login-from {  
  margin-top: 20px;  
  height:100%;
  width: 70%;
}  
  
.inputView {  
  background-color: #fff;
  width: 100%;  
  line-height: 44px;  
}  
/*输入框*/  
.nameImage, .keyImage {  
  margin-left: 22px;  
  width: 14px;  
  height: 14px  
}  
  
.loginLab {  
  margin: 15px 15px 15px 10px;  
  color: #545454;  
  font-size: 14px  
}  
.inputText {  
  width: 60%; 
  float: right;  
  text-align: right;  
  margin-right: 10px;   
  margin-top: 11px;    
  color: #ccc;  
  font-size: 14px;
}  
  
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin-top: 1px;  
}  
/*按钮*/  
.BtnView {  
  width: 100%;  
  height: auto;    
  margin-bottom: 0px;  
  padding-bottom: 0px;
  margin-left: 0px;
  margin-top: 45px; 
}  
  
.loginBtn{  
  width: 100px;  
  float: left; 
  background-color: #3a86f9;
  color: #fff; 
}  
.registerBtn{  
  width: 100px; 
  background-color: #3a86f9;
  color: #fff;
  float: right;
}  
.changeBtn{
  width: 105px;
  margin-top :10px;
  float: right;
}